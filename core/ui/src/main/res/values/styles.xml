<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="bottomSheetDragHandleStyle">@style/Widget.MaterialComponents.BottomSheet.DragHandle</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">1</item>
    </style>

    <style name="InputStyle">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textColor">@color/colorNero</item>
        <item name="android:textColorHint">@color/colorGray_65</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textColor">@color/colorNero</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyleActive">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_button_active</item>
        <item name="android:fontFamily">@font/helvetica_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubmitBtnActiveStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/submit_btn_height</item>
        <item name="android:backgroundTint">@color/colorOrange</item>
        <item name="android:fontFamily">@font/helvetica_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubmitBtnInactiveStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_height">@dimen/submit_btn_height</item>
        <item name="android:background">@drawable/bg_submit_btn_inactive</item>
        <item name="android:fontFamily">@font/helvetica_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputTitleStyle">
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
