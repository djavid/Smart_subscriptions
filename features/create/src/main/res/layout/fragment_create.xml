<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="contentDescription,autofill">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/title_add_sub"
            android:textColor="@color/colorNero"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/create_closeBtn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_24px"
            app:tint="@android:color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/create_bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottom_sheet"
        android:elevation="15dp"
        android:paddingTop="20dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:behavior_peekHeight="800dp"
        tools:layout_marginTop="@dimen/toolbar_height">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorWhisper" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/create_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbarThumbVertical="@null"
            tools:ignore="UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/create_titleTextView"
                    style="@style/InputTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_sub_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.djavid.ui.ClosableAutoCompleteView
                    android:id="@+id/create_titleInput"
                    style="@style/InputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="56dp"
                    android:hint="@string/hint_title"
                    android:inputType="text"
                    android:maxLength="30"
                    app:layout_constraintTop_toBottomOf="@id/create_titleTextView" />

                <ImageView
                    android:id="@+id/create_logoBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/create_titleInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/create_titleInput"
                    app:layout_constraintTop_toTopOf="@id/create_titleInput"
                    tools:background="@color/colorBlue"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/create_predefinedBtn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_format_list_bulleted_24px"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/create_titleInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/create_titleInput"
                    app:layout_constraintTop_toTopOf="@id/create_titleInput"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/create_paymentTextView"
                    style="@style/InputTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_payment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_titleInput" />

                <com.djavid.ui.ClosableEditText
                    android:id="@+id/create_priceInput"
                    style="@style/InputStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:hint="@string/hint_price"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    app:layout_constraintEnd_toStartOf="@id/create_currencySymbol"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_paymentTextView" />

                <TextView
                    android:id="@+id/create_currencySymbol"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/helvetica_medium"
                    android:textColor="@color/colorNero"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@id/create_priceInput"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/create_priceInput"
                    tools:text="â‚½" />

                <TextView
                    android:id="@+id/create_everyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/helvetica_regular"
                    android:text="@string/title_every"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_priceInput" />

                <com.djavid.ui.ClosableEditText
                    android:id="@+id/create_periodQuantityInput"
                    style="@style/InputStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:hint="@string/hint_quantity"
                    android:inputType="number"
                    android:maxLength="4"
                    app:layout_constraintEnd_toStartOf="@id/create_periodSelector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_everyTextView" />

                <Spinner
                    android:id="@+id/create_periodSelector"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_period_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/create_periodQuantityInput"
                    app:layout_constraintTop_toBottomOf="@id/create_everyTextView" />

                <ImageView
                    android:id="@+id/create_expandIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/create_periodSelector"
                    app:layout_constraintEnd_toEndOf="@id/create_periodSelector"
                    app:layout_constraintTop_toTopOf="@id/create_periodSelector"
                    app:srcCompat="@drawable/ic_expand_more_24px"
                    app:tint="@android:color/black" />

                <CheckBox
                    android:id="@+id/create_trialPeriodCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_periodQuantityInput" />

                <TextView
                    android:id="@+id/create_freePeriodTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/title_trial_period"
                    android:textColor="@color/colorGray"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@id/create_trialPeriodCheckbox"
                    app:layout_constraintStart_toEndOf="@id/create_trialPeriodCheckbox"
                    app:layout_constraintTop_toTopOf="@id/create_trialPeriodCheckbox" />

                <TextView
                    android:id="@+id/create_firstPayDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/helvetica_regular"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/desc_first_pay"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/create_trialPeriodCheckbox" />

                <com.djavid.ui.ClosableEditText
                    android:id="@+id/create_paymentDateInput"
                    style="@style/InputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/hint_first_pay"
                    android:inputType="date"
                    app:layout_constraintTop_toBottomOf="@id/create_firstPayDescription" />

                <TextView
                    android:id="@+id/create_noteTextView"
                    style="@style/InputTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_additional"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_paymentDateInput" />

                <com.djavid.ui.ClosableEditText
                    android:id="@+id/create_categoryInput"
                    style="@style/InputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/title_category"
                    android:inputType="text"
                    android:maxLength="30"
                    app:layout_constraintTop_toBottomOf="@id/create_noteTextView" />

                <com.djavid.ui.ClosableEditText
                    android:id="@+id/create_noteInput"
                    style="@style/InputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/title_note"
                    android:inputType="text"
                    android:lines="2"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    app:layout_constraintTop_toBottomOf="@id/create_categoryInput" />

                <Button
                    android:id="@+id/create_submitBtn"
                    style="@style/SubmitBtnActiveStyle"
                    android:layout_width="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/add_sub"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_noteInput" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/create_submitBtn" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>